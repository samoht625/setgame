{
  "name": "app",
  "private": true,
  "devDependencies": {
    "esbuild": "^0.25.11"
  },
  "scripts": {
    "build": "esbuild app/javascript/**/*.{js,ts,tsx} --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --loader:.ts=ts --loader:.tsx=tsx --jsx=automatic",
    "build:css": "npx @tailwindcss/cli -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.18",
    "@rails/actioncable": "^8.0.300",
    "@tailwindcss/cli": "^4.1.14",
    "@types/node": "^24.8.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3"
  }
}
